# ikas OAuth Settings
NEXT_PUBLIC_GRAPH_API_URL=https://api.myikas.com/api/v2/admin/graphql
NEXT_PUBLIC_ADMIN_URL=https://{storeName}.myikas.com/admin
NEXT_PUBLIC_CLIENT_ID=your_ikas_client_id_here
CLIENT_SECRET=your_ikas_client_secret_here

# App URL (Vercel'den alınacak)
NEXT_PUBLIC_DEPLOY_URL=https://your-app.vercel.app

# Session Secret (32+ karakter random string)
SECRET_COOKIE_PASSWORD=generate-a-32-character-random-string-here

# Database (Vercel Postgres)
# Vercel dashboard'dan otomatik alınacak
DATABASE_URL=postgresql://user:password@host:5432/database

# Portal Domain (Opsiyonel - kendi domain'in)
NEXT_PUBLIC_PORTAL_DOMAIN=your-domain.com
